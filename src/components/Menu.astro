<nav class="menu">
    <ul>
        <li><a href="/">Inicio</a></li>
        <li><a href="/about">Acerca</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contact">Contacto</a></li>
    </ul>
</nav>

<style>
    .menu {
        padding: 1rem;
        width: min(100%, 1500px);
    }
    .menu ul {
        display: flex;
        width: 100%;
        height: 100%;
        flex-direction: row;
        gap: 1rem;
    }
    .menu a {
        height: 100%;
        position: relative;
        color: var(--secondary-color);
        text-decoration: none;
    }

    .menu a:hover{
        background-color: red;
    }
    .menu a::after {
        position: absolute;
        left: 0;
        top: 0;
        content: "";
        width: 2px;
        height: 100%;
        background-color: red;
    }
</style>
