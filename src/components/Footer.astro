---
import "./styles.css";
---

<div class="box-sextion">
    <div class="box-element">
        <div class="box-view">
            <div class="box-side">Java</div>
            <div class="box-side">JavaScript</div>
            <div class="box-side">Python</div>
            <div class="box-side">SpringBoot</div>
        </div>
    </div>
    <div class="box-info">From delivery to dveloper</div>
</div>


<style>

    .box-sextion {
		position: relative;
	}
	.box-element {
		perspective: 500px;
		height: 100px;
	}

	.box-view {
		position: relative;
		width: 150px;
		height: 50px;
		transform-style: preserve-3d;
		animation: rotate 5s ease-in-out infinite;
	}

	.box-side {
		position: absolute;
		width: 200px;
		height: 50px;
		border: 2px solid var(--c-pri);
		display: flex;
		align-items: center;
		justify-content: center;
		backface-visibility: hidden;
	}

	.box-side:nth-child(1) {
		transform: rotateX(0deg) translateZ(25px);
	}

	.box-side:nth-child(2) {
		transform: rotateX(180deg) translateZ(25px);
	}

	.box-side:nth-child(3) {
		transform: rotateX(90deg) translateZ(25px);
	}

	.box-side:nth-child(4) {
		transform: rotateX(-90deg) translateZ(25px);
	}

	@keyframes rotate {
		0% {
			transform: rotateX(0deg);
		}
		100% {
			transform: rotateX(-360deg);
		}
	}

</style>