---
import myPhoto from '../assets/images/Profilev3.png'
---

<div class="container">
	
	<div class="info-section">
		<h1 class="name">Cristianbyte</h1>
		<p class="title">Desarrollador Web</p>
	</div>
	<div class="photo-section">
		<div class="photo-placeholder">
			<img src="/public/images/Profilev3.png" alt="" srcset="">
		</div>
	</div>
</div>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Cabin+Sketch:wght@400;700&family=Share+Tech+Mono&display=swap');
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: "Share Tech Mono", monospace;
	}
	
	body {
		background-color: white;
		color: black;
		height: 100vh;
		overflow: hidden;
	}

	.container {
		display: flex;
		height: 100vh;
		width: 100%;
	}

	.photo-section {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.photo-placeholder {
		width: 400px;
		height: 400px;
		border-radius: 50%;
		background-color: #eee;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #666;
		font-size: 18px;
		overflow: hidden;
		img{
			width: 100%;
			height: 100%;
			object-fit: contain;
		}
	}

	.info-section {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.name {
		font-family: "Cabin Sketch", sans-serif;
		font-size: 4rem;
		font-weight: 300;
		letter-spacing: -2px;
		margin-bottom: 20px;
		color: black;
		width: min-content;
	}

	.title {
		font-size: 1.5rem;
		font-weight: 400;
		color: #666;
		letter-spacing: 1px;
	}
</style>
