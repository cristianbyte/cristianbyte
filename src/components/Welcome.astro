---
import './styles.css'
import './reset.css'
---

<div class="container">
	<div class="title-section">
		<h1 class="name">Cristianbyte</h1>
	</div>
	<div class="info-section">
		<div class="photo-section">
			<div class="photo-placeholder">
				<img src="/images/Profilev3.png" alt="" srcset="" />
			</div>
		</div>
		<p class="title">Desarrollador Web</p>

	</div>
</div>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Mona+Sans:ital,wght@0,200..900;1,200..900&family=Share+Tech+Mono&display=swap');
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: "Share Tech Mono", monospace;
	}

	body {
		background-color: white;
		color: black;
		height: 100vh;
		overflow: hidden;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.container {
		display: flex;
		flex-direction: column;
		height: 100vh;
		width: min(100%, 1500px);
	}

	.title-section{
		width: 100%;
	}

	.info-section{
		height: auto;
	}

	.name {
		font-family: "Mona Sans", sans-serif;
		font-size: min(7rem, calc(100vw / 9));
		height: 10rem;
		display: flex;
		justify-content: center;
		align-items: center;
		text-transform: uppercase;
		font-weight: 600;
		letter-spacing: 2px;
		color: black;
	}

	.title {
		font-size: 1.5rem;
		font-weight: 400;
		color: #666;
		letter-spacing: 1px;
	}

	.photo-section {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}
	
	.photo-placeholder {
		transform-style: preserve-3d;
		position: relative;
		display: flex;
		width: min(400px, 50vw);
		aspect-ratio: 1/1;
		align-items: center;
		justify-content: center;
		color: #666;
		font-size: 18px;
		z-index: 0;
		img {
			transition: .4s  ease;
			border: 4px solid var(--primary-color);
			width: 100%;
			height: 100%;
			object-fit: contain;
			background-color: var(--bg-color);
			transform: translate(32px, 32px);
		}
	}
	.photo-placeholder:hover img{
		transform: translate(0px, 0px);
	}
	
	.photo-placeholder:hover::before, .photo-placeholder:hover::after{
		clip-path: polygon(0 100%, 100% 100%, 100% 0, 0 0);
	}
	
	.photo-placeholder::before{
		transition: .4s ease;
		position: absolute;
		content: '';
		width: calc(100% - 8px);
		height: 30px;
		bottom: 0;
		clip-path: polygon(0 100%, 100% 100%, 100% 100%, 0% 100%);
		transform: skewX(45deg) translate(1px, 32px);
		border: 4px solid var(--primary-color);
		border-top: none;
		transform-origin: bottom;
		z-index: -1;
	}
	
	.photo-placeholder::after{
		transition: .4s ease;
		position: absolute;
		content: '';
		height: calc(100% - 6px);
		width: 30px;
		right: 0;
		clip-path: polygon(100% 100%, 100% 100%, 100% 0, 100% 0);
		transform: skewY(45deg) translate(32px, .5px);
		border: 4px solid var(--primary-color);
		border-left: none;
		border-bottom: none;
		transform-origin: right;
		z-index: -1;
	}
	
</style>
