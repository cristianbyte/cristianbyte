---
import './styles.css'
---

<div class="container">
	<div class="info-section">
		<h1 class="name">Cristianbyte</h1>
		<p class="title">Desarrollador Web</p>
	</div>
	<div class="photo-section">
		<div class="photo-placeholder">
			<img src="/images/Profilev3.png" alt="" srcset="" />
		</div>
		<!-- <p class="photo-workingOn">working on: Portfolio</p> -->
	</div>
</div>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Cabin+Sketch:wght@400;700&family=Share+Tech+Mono&display=swap");
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: "Share Tech Mono", monospace;
	}

	body {
		background-color: white;
		color: black;
		height: 100vh;
		overflow: hidden;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.container {
		display: flex;
		height: 100vh;
		width: min(100%, 1200px);
	}

	.photo-section {
		position: relative;
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}
	
	.photo-placeholder {
		transform-style: preserve-3d;
		perspective: 100px;
		position: relative;
		display: flex;
		width: min(400px, 50vw);
		aspect-ratio: 1/1;
		align-items: center;
		justify-content: center;
		color: #666;
		font-size: 18px;
		img {
			width: 100%;
			height: 100%;
			object-fit: contain;
			border: 2px solid var(--primary-color);
		}
	}

	.photo-placeholder::before{
		position: absolute;
		content: '';
		width: 100%;
		height: 30px;
		bottom: 0;
		background-color: red;
		transform: rotateX(-40deg) skewX(-100deg);
		transform-origin: bottom right;

	}

	.photo-workingOn{
		position: relative;
		transform: translateY(-30%);
		background-color: var(--bg-color);
		border: 2px solid var(--primary-color);
		width: min(400px, 50vw);
		padding: 1rem;
	}

	.photo-workingOn::before{
		position: relative;
		content: '';
		padding: 0 10px;
		margin-right: 1rem;
		height: 10px;
		background-color: var(--primary-color);
		animation: intermin 1s ease infinite;
	}

	@keyframes intermin {
		0%,100%{
			opacity: 1;
		}50%{
			opacity: 0;
		}
	}

	.info-section {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: start;
		width: min(400px, 45vw);
		padding-left: 5vw;
	}

	.name {
		font-family: "Cabin Sketch", sans-serif;
		font-size: 4rem;
		font-weight: 300;
		letter-spacing: -2px;
		margin-bottom: 20px;
		color: black;
		width: min-content;
	}

	.title {
		font-size: 1.5rem;
		font-weight: 400;
		color: #666;
		letter-spacing: 1px;
	}

	@media (orientation: portrait) {
		.container{
			flex-direction: column;
		}
		.info-section{
			width: 100%;
			padding: 0;
			justify-content: center;
			align-items: center;
		}
	}
</style>
