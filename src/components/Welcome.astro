---
import './styles.css'
import './reset.css'
---

<div class="container">
	<div class="info-section">
		<h1 class="name">Cristianbyte</h1>
		<p class="title">Desarrollador Web</p>
	</div>
	<div class="photo-section">
		<div class="photo-placeholder">
			<img src="/images/Profilev3.png" alt="" srcset="" />
		</div>
		<!-- <p class="photo-workingOn">working on: Portfolio</p> -->
	</div>
</div>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Doto:wght@100..900&family=Share+Tech+Mono&display=swap');
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: "Share Tech Mono", monospace;
	}

	body {
		background-color: white;
		color: black;
		height: 100vh;
		overflow: hidden;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.container {
		display: flex;
		height: 100vh;
		width: min(100%, 1200px);
	}

	.photo-section {
		position: relative;
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}
	
	.photo-placeholder {
		transform-style: preserve-3d;
		/* perspective: 100px; */
		position: relative;
		display: flex;
		width: min(400px, 50vw);
		aspect-ratio: 1/1;
		align-items: center;
		justify-content: center;
		color: #666;
		font-size: 18px;
		z-index: 0;
		img {
			transition: .4s  ease;
			border: 4px solid var(--primary-color);
			width: 100%;
			height: 100%;
			object-fit: contain;
			background-color: var(--bg-color);
			transform: translate(32px, 32px);
		}
	}
	.photo-placeholder:hover img{
		transform: translate(0px, 0px);
	}
	
	.photo-placeholder:hover::before, .photo-placeholder:hover::after{
		clip-path: polygon(0 100%, 100% 100%, 100% 0, 0 0);
	}
	
	.photo-placeholder::before{
		transition: .4s ease;
		position: absolute;
		content: '';
		width: calc(100% - 8px);
		height: 30px;
		bottom: 0;
		clip-path: polygon(0 100%, 100% 100%, 100% 100%, 0% 100%);
		transform: skewX(45deg) translate(1px, 32px);
		border: 4px solid var(--primary-color);
		border-top: none;
		transform-origin: bottom;
		z-index: -1;
	}
	
	.photo-placeholder::after{
		transition: .4s ease;
		position: absolute;
		content: '';
		height: calc(100% - 6px);
		width: 30px;
		right: 0;
		clip-path: polygon(100% 100%, 100% 100%, 100% 0, 100% 0);
		transform: skewY(45deg) translate(32px, .5px);
		border: 4px solid var(--primary-color);
		border-left: none;
		border-bottom: none;
		transform-origin: right;
		z-index: -1;
	}
	
	.photo-workingOn{
		position: relative;
		transform: translateY(-30%);
		background-color: var(--bg-color);
		border: 2px solid var(--primary-color);
		width: min(400px, 50vw);
		padding: 1rem;
	}

	.photo-workingOn::before{
		position: relative;
		content: '';
		padding: 0 10px;
		margin-right: 1rem;
		height: 10px;
		background-color: var(--primary-color);
		animation: intermin 1s ease infinite;
	}

	@keyframes intermin {
		0%,100%{
			opacity: 1;
		}50%{
			opacity: 0;
		}
	}

	.info-section {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: start;
		width: min(400px, 45vw);
		padding-left: 5vw;
	}

	.name {
		font-family: "Doto", sans-serif;
		font-size: 4rem;
		font-weight: 900;
		letter-spacing: -2px;
		margin-bottom: 20px;
		color: black;
		width: min-content;
	}

	.title {
		font-size: 1.5rem;
		font-weight: 400;
		color: #666;
		letter-spacing: 1px;
	}

	@media (orientation: portrait) {
		.container{
			flex-direction: column;
		}
		.info-section{
			width: 100%;
			padding: 0;
			justify-content: center;
			align-items: center;
		}
	}
</style>
