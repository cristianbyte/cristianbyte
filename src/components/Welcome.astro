---
import Lane8 from "./lane8.astro";
import "./styles.css";
import "./reset.css";
---

<div class="container">
	<div class="title-section">
		<h1 class="name">Cristianbyte</h1>
	</div>
	<div class="info-section">
		<div class="photo-section">
			<div class="photo-placeholder">
				<img src="/images/Profilev3.png" alt="" srcset="" />
			</div>
		</div>
	</div>
	<div class="info-down">
		<Lane8>
			<div>Java</div>
			<div>React</div>
			<div>JavaScript</div>
			<div>Astro</div>
			<div>SpringBoot</div>
			<div>Python</div>
			<div>MySql</div>
		</Lane8>
	</div>
</div>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Anta&family=Share+Tech+Mono&display=swap");
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: "Share Tech Mono", monospace;
	}

	.container {
		display: flex;
		flex-direction: column;
		overflow: hidden;
		height: 100vh;
		width: 100%;
	}

	.title-section {
		display: flex;
		justify-content: center;
		border-bottom: 2px solid var(--c-pri);
		padding: 2rem;
	}

	.name {
		font-family: "Anta", sans-serif;
		font-size: min(10rem, calc(100vw / 8));
		line-height: min(10rem, calc(100vw / 8));
		text-transform: uppercase;
		font-weight: 600;
		letter-spacing: 2px;
		color: black;
	}

	.info-section {
		height: auto;
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;
		align-items: center;
	}

	.photo-section {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}

	.photo-placeholder {
		transform-style: preserve-3d;
		position: relative;
		display: flex;
		width: min(400px, 50vw);
		aspect-ratio: 1/1;
		align-items: center;
		justify-content: center;
		color: #666;
		font-size: 18px;
		z-index: 0;
		img {
			transition: 0.4s ease;
			border: 4px solid var(--c-pri);
			width: 100%;
			height: 100%;
			object-fit: contain;
			background-color: var(--c-bg);
			transform: translate(32px, 32px);
		}
	}
	.photo-placeholder:hover img {
		transform: translate(0px, 0px);
	}

	.photo-placeholder:hover::before,
	.photo-placeholder:hover::after {
		clip-path: polygon(0 100%, 100% 100%, 100% 0, 0 0);
	}

	.photo-placeholder::before {
		transition: 0.4s ease;
		position: absolute;
		content: "";
		width: calc(100% - 8px);
		height: 30px;
		bottom: 0;
		clip-path: polygon(0 100%, 100% 100%, 100% 100%, 0% 100%);
		transform: skewX(45deg) translate(1px, 32px);
		border: 4px solid var(--c-pri);
		border-top: none;
		transform-origin: bottom;
		z-index: -1;
	}

	.photo-placeholder::after {
		transition: 0.4s ease;
		position: absolute;
		content: "";
		height: calc(100% - 6px);
		width: 30px;
		right: 0;
		clip-path: polygon(100% 100%, 100% 100%, 100% 0, 100% 0);
		transform: skewY(45deg) translate(32px, 0.5px);
		border: 4px solid var(--c-pri);
		border-left: none;
		border-bottom: none;
		transform-origin: right;
		z-index: -1;
	}

	.info-down{
		margin-top: auto;
		width: 100%;
		height: auto;
	}

	@media (max-width: 430px) {
		.photo-placeholder{ 
			padding: 5vh 0;
			img {
			transform: translate(0, 0);
		}
	}
	}
</style>
